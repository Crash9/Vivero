@page
@model Vivero.Pages.PlantList.CreateModel
@{
}

<br />
<h2 class="text-info">Create New Plant</h2>
<br />

<div class="border container" style="padding:20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Plant.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Plant.Name" class="form-control" />
            </div>
            <span asp-validation-for="Plant.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Plant.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Plant.Price" class="form-control" />
            </div>
            <span asp-validation-for="Plant.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Plant.Stock"></label>
            </div>
            <div class="col-6">
                <input asp-for="Plant.Stock" class="form-control" />
            </div>
            <span asp-validation-for="Plant.Stock" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Plant.Photo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Plant.Photo" class="form-control" />
            </div>
            <span asp-validation-for="Plant.Photo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Plant.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Plant.Description" class="form-control" />
            </div>
            <span asp-validation-for="Plant.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}